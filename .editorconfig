# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true

[{src,scripts}/**.{js,ts,json,js}]
indent_size = 3
insert_final_newline = true
max_line_length = 140

[*.{tsx,vue}]
indent_size = 2
max_line_length = 300

[*.md]
trim_trailing_whitespace = false